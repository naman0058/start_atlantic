          <div class="container">
           
            <div class="row">


              <% for(i=0;i<result[3].length;i++){ %>

              <div class="col-md-4 mb-4">
                <a href="/country/<%=name%>/<%=result[3][i].visaname.replace(/[ ,]+/g, "-");%>?countryid=<%=countryid%>&visaid=<%=result[3][i].visaid%>" style='text-decoration:none'>
                <div class="card text-dark bg-white mb-3 card2">
                
                  <img src="/images/<%=result[3][i].visalogo%>" alt="image" style="border-radius: 16px 16px 0px 0px;height: 343px;">
                  <div class="card-body">
                    <h3 class="card-title " style="font-family: Poppins;
                    font-size: 20px;
