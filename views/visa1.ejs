<%- include ('./header.ejs') %>
      <section style="padding-top: 10rem;background-color: white;" >
        <div class="bg-holder" style="background-image:url();">
        </div>
        <!--/.bg-holder-->

        <div class="container">
          <div class="row align-items-center">
            <div class="col-md-5 col-lg-6 order-0 order-md-1 text-end"><img class="pt-7 pt-md-0 hero-img" src="/images/<%=result[3][0].countrylogo%>" alt="hero-header" style="height:400px;border-radius:16px" /></div>
            <div class="col-md-7 col-lg-6 text-md-start text-center py-6" style="background:url('/img/Visa/Visa/All visa page/Hero.png');background-size: contain;background-repeat: no-repeat;">
